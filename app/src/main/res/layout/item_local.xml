<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageLocal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/local1" />

        <TextView
            android:id="@+id/nombreLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Local"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/detallesLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UbicaciÃ³n, capacidad"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/precioLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S/. 100"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <ImageButton
            android:id="@+id/botonAgregar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:background="@drawable/fondo_gradiente"
            android:src="@drawable/ic_eye"
            android:contentDescription="Agregar" />

    </LinearLayout>



</androidx.cardview.widget.CardView>
